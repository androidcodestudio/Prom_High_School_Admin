<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/backface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingEnd="16dp"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:background="@color/backface">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:src="@mipmap/ic_launcher"/>
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/app_name"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:textColor="@color/textColor"
                    android:layout_marginStart="16dp"/>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Date :"
                        android:fontFamily="@font/latobold"
                        android:textSize="@dimen/text_size01"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="15 aug 2023"
                        android:fontFamily="@font/latobold"
                        android:textSize="@dimen/text_size01"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time :"
                        android:fontFamily="@font/latobold"
                        android:textSize="@dimen/text_size01"
                        android:textStyle="bold"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="16dp"/>

                    <TextView
                        android:id="@+id/time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="10:30 am"
                        android:fontFamily="@font/latobold"
                        android:textSize="@dimen/text_size01"
                        android:textStyle="bold"
                        android:textColor="@color/textColor"
                        android:layout_marginStart="16dp"/>

                </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/deleteNoticeTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Admin For  Colony High School "
            android:textSize="17sp"
            android:textStyle="bold"
            android:layout_marginVertical="@dimen/text_margin"
            android:textColor="@color/textColor"/>

        <ImageView
            android:id="@+id/deleteNoticeImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/prom"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp">

            <Button
                android:id="@+id/deleteBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delete Notice"
                android:layout_weight="1"
                android:backgroundTint="@color/red"
                android:layout_marginEnd="2.5dp"/>

            <Button
                android:id="@+id/editBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Edit Notice"
                android:layout_marginStart="2.5dp"
                android:layout_weight="1"
                android:backgroundTint="#0C8E11"/>

        </LinearLayout>



    </LinearLayout>


</androidx.cardview.widget.CardView>