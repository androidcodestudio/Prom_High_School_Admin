<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_margin="15dp"
    android:background="@color/white">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update Subject Information"
        android:gravity="center"
        android:textColor="@color/colorAccent"
        android:textStyle="bold"
        android:textSize="20sp"/>


    <LinearLayout
        android:id="@+id/addImage"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/prom"
                android:id="@+id/profile_img"
                app:civ_border_color="@color/colorAccent"
                app:civ_border_width="2dp"
                app:civ_border_overlay="true"
                android:layout_marginTop="10dp"/>

            <ImageView
                android:padding="7dp"
                android:id="@+id/editPhotoIcon"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:background="@drawable/green_circle"
                android:elevation="@dimen/text_size"
                android:layout_marginStart="146dp"
                android:layout_marginTop="103dp"
                android:src="@drawable/ic_baseline_camera_enhance_24"
                android:visibility="visible"/>

        </FrameLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:layout_marginTop="5dp">
            <TextView
                android:id="@+id/userProfileStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set Subject Image"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="2dp"/>
            <ImageView
                android:id="@+id/statusEdit"
                android:layout_marginStart="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_edit_border"/>
        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/update_subject"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Subject Name"
            android:textColor="@color/textColor"
            android:inputType="text"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/update_set1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Update Set Number"
            android:textColor="@color/textColor"
            android:inputType="number"/>
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="24dp">

        <Button
            android:id="@+id/update1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit Update"
            android:textColor="@color/white"
            android:backgroundTint="@color/colorAccent"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"/>

    </LinearLayout>

</LinearLayout>